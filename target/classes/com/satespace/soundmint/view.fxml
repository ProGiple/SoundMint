<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.satespace.soundmint.AppController"
            prefWidth="400"
            prefHeight="300"
            stylesheets="@style.css"
            styleClass="body">
    <top>
        <ScrollPane
                fx:id="playListScroller"
                hbarPolicy="NEVER"
                vbarPolicy="NEVER"
                fitToHeight="true"
                styleClass="no-border"
                fitToWidth="true">
            <HBox
                    fx:id="topPlayListBlock"
                    alignment="CENTER_LEFT"
                    styleClass="simplePlaylist-block"/>
        </ScrollPane>
    </top>
</BorderPane>
