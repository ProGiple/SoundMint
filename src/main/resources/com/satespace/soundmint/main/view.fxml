<?xml version="1.0" encoding="UTF-8"?>

<?import com.satespace.soundmint.items.abs.ColoredLabel?>
<?import com.satespace.soundmint.items.abs.HorizontalScroller?>
<?import com.satespace.soundmint.items.main.*?>
<?import com.satespace.soundmint.items.main.bit.Bit?>
<?import com.satespace.soundmint.items.main.musicButtons.NextMusicButton?>
<?import com.satespace.soundmint.items.main.musicButtons.PreviousMusicButton?>
<?import com.satespace.soundmint.items.main.musicButtons.SwitchStatusMusicButton?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:id="root"
           fx:controller="com.satespace.soundmint.controllers.AppController"
           prefWidth="400"
           prefHeight="300"
           stylesheets="@style.css, @playlist-modal.css">
    <BorderPane fx:id="mainBody" styleClass="body">
        <top>
            <HorizontalScroller
                    fx:id="playListScroller"
                    hbarPolicy="NEVER"
                    vbarPolicy="NEVER"
                    fitToHeight="true"
                    styleClass="no-border"
                    fitToWidth="true">
                <PlaylistBox
                        fx:id="topPlayListBlock"
                        alignment="CENTER_LEFT"
                        styleClass="playlist-block" />
            </HorizontalScroller>
        </top>
        <center>
            <HBox alignment="CENTER" fx:id="center">
                <StackPane>
                    <Bit fx:id="bit" styleClass="track-circle" />
                    <StackPane fx:id="rightButtonsPane">
                        <RateSpeedButton fx:id="rateSpeedButton" styleClass="rate-speed-button"/>
                    </StackPane>
                    <VBox alignment="CENTER"
                          spacing="20"
                          styleClass="track-box"
                          fx:id="trackBox"
                          VBox.vgrow="NEVER">
                        <HBox alignment="CENTER" spacing="30">
                            <PreviousMusicButton fx:id="previousMusicButton"/>
                            <SwitchStatusMusicButton fx:id="switchStatusMusicButton"/>
                            <NextMusicButton fx:id="nextMusicButton"/>
                        </HBox>

                        <VBox alignment="CENTER" spacing="10">
                            <HBox alignment="CENTER" spacing="6">
                                <AudioNameLabel fx:id="trackTitle" styleClass="track-label, fonted"/>
                                <Label styleClass="track-label, fonted" text="â€¢"/>
                                <Label fx:id="trackArtist" styleClass="track-label, fonted"/>
                            </HBox>

                            <VBox spacing="3">
                                <TrackAudioBar
                                        fx:id="trackAudioBar"
                                        prefHeight="6"
                                        styleClass="track-bar"/>
                                <HBox alignment="CENTER" spacing="10">
                                    <Label fx:id="currentTimeLabel"
                                           text="0:00"
                                           styleClass="track-duration-label, fonted"/>
                                    <ColoredLabel fx:id="selectAudioTimeLabel"
                                                  text="--%"
                                                  opacity="0"
                                                  styleClass="track-volume-label, fonted"/>
                                    <Region HBox.hgrow="ALWAYS"/>
                                    <Label fx:id="totalTimeLabel"
                                           text="99:99"
                                           styleClass="track-duration-label, fonted"/>
                                </HBox>
                            </VBox>

                            <VBox spacing="3">
                                <AudioVolumeBar
                                        fx:id="audioVolumeBar"
                                        prefHeight="6"
                                        styleClass="track-bar"
                                        progress="1.0"/>
                                <HBox alignment="CENTER" spacing="10">
                                    <Label text="--%"
                                           fx:id="audioVolumeLabel"
                                           styleClass="track-volume-label, fonted"/>
                                    <ColoredLabel fx:id="selectAudioVolumeLabel"
                                                  text="--%"
                                                  opacity="0"
                                                  styleClass="track-volume-label, fonted"/>
                                    <Region HBox.hgrow="ALWAYS"/>
                                    <Label text="100%"
                                           styleClass="track-volume-label, fonted"/>
                                </HBox>
                            </VBox>
                        </VBox>
                    </VBox>
                </StackPane>
            </HBox>
        </center>
    </BorderPane>
</StackPane>