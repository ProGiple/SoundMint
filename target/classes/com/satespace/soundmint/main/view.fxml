<?xml version="1.0" encoding="UTF-8"?>

<?import com.satespace.soundmint.items.main.AudioNameLabel?>
<?import com.satespace.soundmint.items.main.musicButtons.NextMusicButton?>
<?import com.satespace.soundmint.items.main.musicButtons.PreviousMusicButton?>
<?import com.satespace.soundmint.items.main.musicButtons.SwitchStatusMusicButton?>
<?import com.satespace.soundmint.items.main.PlaylistBox?>
<?import com.satespace.soundmint.items.main.PlaylistScroller?>
<?import com.satespace.soundmint.items.main.TrackAudioBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import com.satespace.soundmint.items.main.AudioVolumeBar?>
<StackPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.satespace.soundmint.controllers.AppController"
            prefWidth="400"
            prefHeight="300"
            stylesheets="@style.css">
    <BorderPane styleClass="body">
        <top>
            <PlaylistScroller
                    fx:id="playListScroller"
                    hbarPolicy="NEVER"
                    vbarPolicy="NEVER"
                    fitToHeight="true"
                    styleClass="no-border"
                    fitToWidth="true">
                <PlaylistBox
                        fx:id="topPlayListBlock"
                        alignment="CENTER_LEFT"
                        styleClass="playlist-block" />
            </PlaylistScroller>
        </top>
        <center>
            <HBox alignment="CENTER" spacing="40">
                <StackPane>
                    <Circle radius="100" styleClass="track-circle"/>
                </StackPane>

                <VBox alignment="CENTER" spacing="20">
                    <!-- <Button fx:id="favoritesButton" text="Избранное" styleClass="favorites-button"/> -->

                    <HBox alignment="CENTER" spacing="30">
                        <PreviousMusicButton fx:id="previousMusicButton" />
                        <SwitchStatusMusicButton fx:id="switchStatusMusicButton" />
                        <NextMusicButton fx:id="nextMusicButton" />
                    </HBox>

                    <VBox alignment="CENTER" spacing="7">
                        <HBox alignment="CENTER" spacing="6">
                            <AudioNameLabel fx:id="trackTitle" styleClass="track-label" />
                            <Label styleClass="track-label" text="•" />
                            <Label fx:id="trackArtist" styleClass="track-label" />
                        </HBox>
                        <TrackAudioBar
                                fx:id="trackAudioBar"
                                prefHeight="6"
                                styleClass="track-bar" />
                        <HBox alignment="CENTER" spacing="10">
                            <Label fx:id="currentTimeLabel" text="0:00" styleClass="track-duration-label" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Label fx:id="totalTimeLabel" text="99:99" styleClass="track-duration-label" />
                        </HBox>
                        <AudioVolumeBar
                                fx:id="audioVolumeBar"
                                prefHeight="6"
                                styleClass="track-bar"
                                progress="1.0" />
                        <HBox alignment="CENTER" spacing="10">
                            <Label text="--%" fx:id="audioVolumeLabel" styleClass="track-volume-label" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Label text="100%" styleClass="track-volume-label" />
                        </HBox>
                    </VBox>
                </VBox>
            </HBox>
        </center>
    </BorderPane>

</StackPane>

